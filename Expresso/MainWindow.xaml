<Window x:Class="Expresso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expresso"
        xmlns:conv="clr-namespace:Expresso.Converters"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Width="1024" Height="768"
        DataContext="{Binding RelativeSource={RelativeSource self}}">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></conv:BooleanToVisibilityConverter>
        <conv:BooleanToVisibilityConverterInverted x:Key="BooleanToVisibilityConverterInverse"></conv:BooleanToVisibilityConverterInverted>
        <conv:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter"></conv:ObjectToBooleanConverter>
        <conv:ObjectToBooleanConverterInverted x:Key="ObjectToBooleanConverterInverted"></conv:ObjectToBooleanConverterInverted>
        <conv:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"></conv:ObjectToVisibilityConverter>
        <conv:ObjectToVisibilityConverterInverted x:Key="ObjectToVisibilityConverterInverted"></conv:ObjectToVisibilityConverterInverted>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="Padding" Value="2 0"/>
            <Setter Property="MinHeight" Value="20"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="LightBlue" />
        </Style>

        <Style TargetType="Label" x:Key="ContextKey">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="Button" x:Key="WelcomeButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
            
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Background" Value="LightCyan"/>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="New" Key="N" Modifiers="Ctrl"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="FileNewCommand_CanExecute" Executed="FileNewCommand_Executed" />
    </Window.CommandBindings>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New..." Click="MenuItemFileNew_Click"/>
                <MenuItem Header="_Open..." Click="MenuItemFileOpen_Click"/>
                <MenuItem Header="Save" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}" Click="MenuItemFileSave_Click"/>
                <MenuItem Header="Save As..." IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <Separator/>
                <MenuItem Header="Export..."/>
                <Separator/>
                <MenuItem Header="Close"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Create" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}">
                <MenuItem Header="_Condition..." Click="MenuItemCreateCondition_Click"/>
                <MenuItem Header="_Reader..." Click="MenuItemCreateReader_Click"/>
                <MenuItem Header="_Writer..." Click="MenuItemCreateWriter_Click"/>
                <MenuItem Header="_Variable..." Click="MenuItemCreateVariable_Click"/>
                <MenuItem Header="Work_flow..." Click="MenuItemCreateWorkflow_Click"/>
            </MenuItem>
            <MenuItem Header="_Engine">
                <MenuItem Header="Submit" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <Separator/>
                <MenuItem Header="Create Workflow..."/>
                <MenuItem Header="Schedules Stack..."/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Label Content="{Binding BackgroundText}" FontSize="32" Foreground="LightGray" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverterInverted}}"/>
            <TabControl TabStripPlacement="Left" Margin="0, 0, 0, 10" SelectedIndex="{Binding MainTabControlTabIndex}"
                        Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverter}}">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <RotateTransform Angle="270" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabItem Header="Welcome">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <Button Content="Create Workflow" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateWorkflow_Click"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Create Variable" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateVariable_Click"/>
                                <Button Content="Create Condition" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateCondition_Click"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Create Reader" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateReader_Click"/>
                                <Button Content="Create Writer" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateWriter_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Condition" Visibility="{Binding CurrentEditingConditional, Converter={StaticResource ObjectToVisibilityConverter}}">

                </TabItem>
                <TabItem Header="Reader" Visibility="{Binding CurrentEditingDataReader, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" Text="{Binding ResultPreview}" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                            <TabControl Grid.Row="2">
                                <TabItem Header="Data Source">
                                    <DockPanel LastChildFill="True">
                                        <Label DockPanel.Dock="Top" 
                                               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                               Content="Add A Query to Get Started." 
                                               FontSize="16" 
                                               Foreground="LightGray" 
                                               Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverterInverted}}"/>
                                        <TabControl DockPanel.Dock="Top" 
                                                    Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverter}}"
                                                    SelectedIndex="{Binding CurrentEditItemIndex}"
                                                    ItemsSource="{Binding CurrentEditingDataReader.DataQueries}">
                                            <TabControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding ServiceProvider}"/>
                                                </DataTemplate>
                                            </TabControl.ItemTemplate>
                                            <TabControl.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Vertical">
                                                        <DockPanel LastChildFill="False">
                                                            <Label Content="Data Service Provider"/>
                                                            <ComboBox DockPanel.Dock="Top" MinWidth="120" SelectedValue="{Binding ServiceProvider}" ItemsSource="{Binding ReaderDataServiceProviderNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                                        </DockPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <Label Content="Data Source String"/>
                                                            <TextBox Text="{Binding DataSourceString}" MinWidth="250"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </TabControl.ContentTemplate>
                                        </TabControl>
                                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="2">
                                            <Button Content="Submit" Click="ReaderQuerySubmitButton_Click"/>
                                            <Button Content="Add Query" Click="AddQueryButton_Click"/>
                                            <Button Content="Add Expression" Click="AddExpressionButton_Click"/>
                                        </StackPanel>
                                        <DockPanel DockPanel.Dock="Bottom"
                                                   Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <Label DockPanel.Dock="Top" Content="Query"/>
                                            <avalonEdit:TextEditor
                                                DockPanel.Dock="Bottom" Margin="5"
                                                BorderThickness="2" BorderBrush="Beige"
                                                x:Name="DataReaderAvalonTextEditor"
                                                ShowLineNumbers="True"
                                                SyntaxHighlighting="{Binding SQLSyntaxHighlighting, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                                FontSize="10pt" FontFamily="Consolas" 
                                                TextChanged="ReaderAvalonTextEditor_OnTextChanged"/>
                                        </DockPanel>
                                    </DockPanel>
                                </TabItem>
                                <TabItem Header="Transform">
                                    <DockPanel LastChildFill="True">
                                        <Label DockPanel.Dock="Top" Content="Transformation SQL"/>
                                        <TextBlock DockPanel.Dock="Top" 
                                                   Text="Using SQLite style SQL to perform transformation on data sources. Refer to data sources using names." 
                                                   TextWrapping="WrapWithOverflow" FontSize="12" Margin="4" Padding="4"/>
                                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="2">
                                            <Button Content="Submit" Click="ReaderTransformSubmitButton_Click"/>
                                        </StackPanel>
                                        <avalonEdit:TextEditor
                                                DockPanel.Dock="Bottom" Margin="5"
                                                BorderThickness="2" BorderBrush="Beige"
                                                x:Name="ReanderTransformAvalonTextEditor"
                                                ShowLineNumbers="True"
                                                SyntaxHighlighting="{Binding SQLSyntaxHighlighting, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                                FontSize="10pt" FontFamily="Consolas" 
                                                TextChanged="ReaderTransformAvalonTextEditor_OnTextChanged"/>
                                    </DockPanel>
                                </TabItem>
                            </TabControl>
                        </Grid>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                        <Grid Grid.Column="2">
                            <Label Content="Reader" Style="{StaticResource ContextKey}"/>
                            <StackPanel>
                                <DockPanel LastChildFill="True">
                                    <Label Content="Name"/>
                                    <TextBox Text="{Binding CurrentEditingDataReader}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Writer" Visibility="{Binding CurrentEditingOutputWriter, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <DockPanel>
                        <Label DockPanel.Dock="Top" Content="Writer 1" FontWeight="Bold" FontStyle="Italic"/>
                        <DockPanel DockPanel.Dock="Top">
                            <StackPanel Orientation="Vertical" DataContext="{Binding CurrentEditingOutputWriter}">
                                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                    <Label Content="Data Service Provider"/>
                                    <ComboBox DockPanel.Dock="Top" MinWidth="120" SelectedValue="{Binding ServiceProvider}" ItemsSource="{Binding WriterDataServiceProviderNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                    <Label Content="Data Source String"/>
                                    <TextBox Text="{Binding DataSourceString}" MinWidth="250"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
                            <Button Content="Execute" Click="WriterExecuteButton_Click"/>
                        </StackPanel>
                        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                            <Label Content="Query"/>
                            <avalonEdit:TextEditor
                            Margin="5"
                            BorderThickness="2" BorderBrush="Beige"
                            x:Name="WriterAvalonTextEditor"
                            ShowLineNumbers="True"
                            SyntaxHighlighting="{Binding SQLSyntaxHighlighting, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                            FontSize="10pt" FontFamily="Consolas" 
                            TextChanged="WriterAvalonTextEditor_OnTextChanged"/>
                        </DockPanel>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Variable" Visibility="{Binding CurrentEditingConditional, Converter={StaticResource ObjectToVisibilityConverter}}">

                </TabItem>
                <TabItem Header="Workflow" Visibility="{Binding CurrentEditingWorkflow, Converter={StaticResource ObjectToVisibilityConverter}}">

                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
