<Window x:Class="Expresso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expresso"
        xmlns:conv="clr-namespace:Expresso.Converters"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Width="1024" Height="768"
        DataContext="{Binding RelativeSource={RelativeSource self}}">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></conv:BooleanToVisibilityConverter>
        <conv:BooleanToVisibilityConverterInverted x:Key="BooleanToVisibilityConverterInverse"></conv:BooleanToVisibilityConverterInverted>
        <conv:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter"></conv:ObjectToBooleanConverter>
        <conv:ObjectToBooleanConverterInverted x:Key="ObjectToBooleanConverterInverted"></conv:ObjectToBooleanConverterInverted>
        <conv:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"></conv:ObjectToVisibilityConverter>
        <conv:ObjectToVisibilityConverterInverted x:Key="ObjectToVisibilityConverterInverted"></conv:ObjectToVisibilityConverterInverted>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="LightBlue" />
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Create..." Click="MenuItemFileCreate_Click"/>
                <MenuItem Header="_Open..." Click="MenuItemFileOpen_Click"/>
                <MenuItem Header="Save" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}" Click="MenuItemFileSave_Click"/>
                <MenuItem Header="Save As..." IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <Separator/>
                <MenuItem Header="Export..."/>
                <Separator/>
                <MenuItem Header="Close"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Create" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}">
                <MenuItem Header="_Trigger..."/>
                <MenuItem Header="_Reader..." Click="MenuItemCreateReader_Click"/>
                <MenuItem Header="_Writer..." Click="MenuItemCreateWriter_Click"/>
            </MenuItem>
            <MenuItem Header="_View" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}">
                <MenuItem Header="Data Pane"/>
                <MenuItem Header="Property Pane"/>
                <MenuItem Header="Readers Pane"/>
                <MenuItem Header="Variables Pane"/>
            </MenuItem>
            <MenuItem Header="_Engine">
                <MenuItem Header="Submit" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <Separator/>
                <MenuItem Header="Create Workflow..."/>
                <MenuItem Header="Schedules Stack..."/>
            </MenuItem>
            <MenuItem Header="_Variables" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}">
                <MenuItem Header="Create Variable..." Command="{Binding CreateVariableCommand}"/>
                <MenuItem Header="Edit Variables..." Command="{Binding EditVariablesCommand}"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Label Content="{Binding BackgroundText}" FontSize="32" Foreground="LightGray" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverterInverted}}"/>
            <TabControl TabStripPlacement="Left" Margin="0, 0, 0, 10" SelectedIndex="{Binding MainTabControlTabIndex}"
                        Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverter}}">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <RotateTransform Angle="270" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabItem Header="Welcome">

                </TabItem>
                <TabItem Header="Trigger" Visibility="{Binding CurrentEditingTrigger, Converter={StaticResource ObjectToVisibilityConverter}}">

                </TabItem>
                <TabItem Header="Reader" Visibility="{Binding CurrentEditingDataReader, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" Text="{Binding ResultPreview}" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                            <TabControl Grid.Row="2">
                                <TabItem Header="Data Source">
                                    <DockPanel LastChildFill="True">
                                        <Label DockPanel.Dock="Top" 
                                               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                               Content="Add A Query to Get Started." 
                                               FontSize="16" 
                                               Foreground="LightGray" 
                                               Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverterInverted}}"/>
                                        <TabControl DockPanel.Dock="Top" 
                                                    Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverter}}"
                                                    SelectedIndex="{Binding CurrentEditItemIndex}"
                                                    ItemsSource="{Binding CurrentEditingDataReader.DataQueries}">
                                            <TabControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Content="{Binding ServiceProvider}"/>
                                                </DataTemplate>
                                            </TabControl.ItemTemplate>
                                            <TabControl.ContentTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Vertical">
                                                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                                            <Label Content="Data Service Provider"/>
                                                            <ComboBox DockPanel.Dock="Top" MinWidth="120" SelectedValue="{Binding ServiceProvider}" ItemsSource="{Binding ReaderDataServiceProviderNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                                            </ComboBox>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                                            <Label Content="Data Source String"/>
                                                            <TextBox Text="{Binding DataSourceString}" MinWidth="250"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </TabControl.ContentTemplate>
                                        </TabControl>
                                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="2">
                                            <Button Margin="2 0" Content="Submit" Click="ReaderQuerySubmitButton_Click"/>
                                            <Button Margin="2 0" Content="Add Query" Click="AddQueryButton_Click"/>
                                            <Button Margin="2 0" Content="Add Expression" Click="AddExpressionButton_Click"/>
                                        </StackPanel>
                                        <DockPanel DockPanel.Dock="Bottom"
                                                   Visibility="{Binding CurrentEditingDataReader.DataQueries, Converter={StaticResource ObjectToVisibilityConverter}}">
                                            <Label DockPanel.Dock="Top" Content="Query"/>
                                            <avalonEdit:TextEditor
                                                DockPanel.Dock="Bottom" Margin="5"
                                                BorderThickness="2" BorderBrush="Beige"
                                                x:Name="ReaderAvalonTextEditor"
                                                ShowLineNumbers="True"
                                                SyntaxHighlighting="{Binding SQLSyntaxHighlighting, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                                FontSize="10pt" FontFamily="Consolas" 
                                                TextChanged="AvalonEditor_OnTextChanged"/>
                                        </DockPanel>
                                    </DockPanel>
                                </TabItem>
                                <TabItem Header="Transform">
                                </TabItem>
                            </TabControl>
                        </Grid>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="10 "/>
                        <Grid Grid.Column="2">

                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Writer" Visibility="{Binding CurrentEditingOutputWriter, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <DockPanel>
                        <Label DockPanel.Dock="Top" Content="Writer 1" FontWeight="Bold" FontStyle="Italic"/>
                        <DockPanel DockPanel.Dock="Top">
                            <StackPanel Orientation="Vertical" DataContext="{Binding CurrentEditingOutputWriter}">
                                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                    <Label Content="Data Service Provider"/>
                                    <ComboBox DockPanel.Dock="Top" MinWidth="120" SelectedValue="{Binding ServiceProvider}" ItemsSource="{Binding WriterDataServiceProviderNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                    <Label Content="Data Source String"/>
                                    <TextBox Text="{Binding DataSourceString}" MinWidth="250"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                            <Label Content="Query"/>
                            <avalonEdit:TextEditor
                            Margin="5"
                            BorderThickness="2" BorderBrush="Beige"
                            x:Name="WriterAvalonTextEditor"
                            ShowLineNumbers="True"
                            SyntaxHighlighting="{Binding SQLSyntaxHighlighting, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                            FontSize="10pt" FontFamily="Consolas" 
                            TextChanged="AvalonEditor_OnTextChanged"/>
                        </DockPanel>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Workflow" Visibility="{Binding CurrentEditingWorkflow, Converter={StaticResource ObjectToVisibilityConverter}}">

                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
