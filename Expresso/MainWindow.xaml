                                    </DockPanel>
                                </DockPanel>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <!--Row Processor Tab-->
                <TabItem Header="Row Processor" Visibility="{Binding ApplicationData.Processors, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <TabControl ItemsSource="{Binding ApplicationData.Processors}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!--Steps Hierarchy-->
                                    <Grid Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <DockPanel Grid.Column="0" LastChildFill="True">
                                            <!--Step Hierarchy Editing Operations-->
                                            <StackPanel DockPanel.Dock="Bottom"
                                                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                    Orientation="Horizontal">
                                                <StackPanel.Resources>
                                                    <Style TargetType="Button">
                                                        <Setter Property="MinWidth" Value="60"/>
                                                        <Setter Property="MinHeight" Value="22"/>
                                                        <Setter Property="Margin" Value="4"/>
                                                        <Setter Property="Padding" Value="4"/>
                                                    </Style>
                                                </StackPanel.Resources>
                                                <Button Content="Add New Step" Click="AddProcessorInputStepButton_Click"/>
                                                <Button Content="Delete Processor" Click="DeleteProcessorButton_Click"/>
                                                <Button Content="Test" Click="TestProcessorButton_Click" 
                                                        Background="SteelBlue" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2" />
                                            </StackPanel>
                                            <!--Steps Tree View-->
                                            <Label DockPanel.Dock="Top" Content="Processor Steps"/>
                                            <TreeView SelectedItemChanged="ProcessorTreeView_SelectedItemChanged" ItemsSource="{Binding StartingSteps}">
                                                <TreeView.Resources>
                                                    <HierarchicalDataTemplate DataType="{x:Type core:ApplicationProcessorStep}" ItemsSource="{Binding NextSteps}">
                                                        <TextBlock Text="{Binding Name}" />
                                                    </HierarchicalDataTemplate>
                                                </TreeView.Resources>
                                            </TreeView>
                                        </DockPanel>
                                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                                        <!--Processor Properties-->
                                        <DockPanel Grid.Column="2">
                                            <Label DockPanel.Dock="Top" Content="Processor Properties" Style="{StaticResource ContextKey}"/>
                                            <DockPanel DockPanel.Dock="Top"  LastChildFill="True" Margin="2">
                                                <Label Content="Name"/>
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DockPanel>
                                            <DockPanel DockPanel.Dock="Top" LastChildFill="True" Margin="2">
                                                <Label DockPanel.Dock="Top" Content="Description"/>
                                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                         TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                                                         SpellCheck.IsEnabled="True"/>
                                            </DockPanel>
                                        </DockPanel>
                                    </Grid>
                                    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                                    <!--Step Details-->
                                    <TabControl Grid.Row="2" ItemsSource="{Binding ListingOfAllSteps}" Tag="{Binding}" SelectedIndex="{Binding ProcessorStepTabItemIndex, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                        <TabControl.ItemTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Name}" />
                                            </DataTemplate>
                                        </TabControl.ItemTemplate>
                                        <TabControl.ContentTemplate>
                                            <DataTemplate>
                                                <DockPanel LastChildFill="True">
                                                    <!--Step Editing Operations-->
                                                    <StackPanel DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                                            <Button Content="Add Input" Click="AddProcessorStepInputButton_Click" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                            <Button Content="Add Output" Click="AddProcessorStepOutputButton_Click" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                            <Button Content="Add Subsequent Step" Click="AddProcessorStepSubstepButton_Click" 
                                                                    Visibility="{Binding IsFinalOutput, Converter={StaticResource BooleanToVisibilityConverterInverted}}"
                                                                    Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                            <CheckBox Content="Is Processor Output" IsChecked="{Binding IsFinalOutput}" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                            <Button Content="Remove Step" Click="RemoveProcessorStepButton_Click" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <!--Step Configurations-->
                                                    <DockPanel LastChildFill="True">
                                                        <!--Step Inputs-->
                                                        <DockPanel DockPanel.Dock="Left" Visibility="{Binding Inputs, Converter={StaticResource ObjectToVisibilityConverter}}">
                                                            <Label DockPanel.Dock="Top" Content="Inputs"/>
                                                            <ListView DockPanel.Dock="Bottom" ItemsSource="{Binding Inputs}">
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox Text="{Binding FromName}" MinWidth="128"/>
                                                                            <Label Content="As"/>
                                                                            <TextBox Text="{Binding AsName}" MinWidth="128"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                        </DockPanel>
                                                        <!--Step Outputs-->
                                                        <DockPanel DockPanel.Dock="Right" Visibility="{Binding Inputs, Converter={StaticResource ObjectToVisibilityConverter}}">
                                                            <Label DockPanel.Dock="Top" Content="Outputs"/>
                                                            <ListView DockPanel.Dock="Bottom" ItemsSource="{Binding Outputs}">
                                                                <ListView.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox Text="{Binding FromName, UpdateSourceTrigger=PropertyChanged}" MinWidth="128"/>
                                                                            <Label Content="As"/>
                                                                            <TextBox Text="{Binding AsName, UpdateSourceTrigger=PropertyChanged}" MinWidth="128"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ListView.ItemTemplate>
                                                            </ListView>
                                                        </DockPanel>
                                                        <!--Step Action-->
                                                        <DockPanel DockPanel.Dock="Right">
                                                            <DockPanel LastChildFill="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <Border DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                                        BorderThickness="2" BorderBrush="LightGray">
                                                                    <StackPanel Orientation="Vertical" Margin="4">
                                                                        <Label Content="Name"/>
                                                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" MinWidth="128"/>
                                                                        <Label Content="Action"/>
                                                                        <ComboBox SelectedValue="{Binding Action}" MinWidth="128" ItemsSource="{Binding RowProcessorActionNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                                                    </StackPanel>
                                                                </Border>
                                                                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="8">
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                                                        <Label Content="{Binding Action}" Margin="0" Padding="0"/>
                                                                        <Label Content=" Configuration" Margin="0" Padding="0"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                <!--Action Inputs & Outputs Interface Specification-->
                                                                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" DataContext="{Binding Parameters}">
                                                                    <StackPanel Visibility="{Binding Inputs, Converter={StaticResource ObjectToVisibilityConverter}}">
                                                                        <Label Content="Inputs" FontWeight="Bold"/>
                                                                        <ItemsControl ItemsSource="{Binding Inputs}" HorizontalAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <StackPanel Visibility="{Binding Outputs, Converter={StaticResource ObjectToVisibilityConverter}}">
                                                                        <Label Content="Outputs" FontWeight="Bold"/>
                                                                        <ItemsControl ItemsSource="{Binding Outputs}" HorizontalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                <!--Action Documentation-->
                                                                <TextBlock DockPanel.Dock="Bottom" Margin="4"
                                                                           DataContext="{Binding Parameters}" Text="{Binding Documentation}" 
                                                                           TextAlignment="Center" Foreground="DarkGray" FontStyle="Italic"
                                                                           Visibility="{Binding Documentation, Converter={StaticResource ObjectToVisibilityConverter}}"/>
                                                                <!--Action Data Template-->
                                                                <ContentPresenter DockPanel.Dock="Bottom" Content="{Binding Parameters}" HorizontalAlignment="Center">
                                                                    <ContentPresenter.Resources>
                                                                        <ResourceDictionary>
                                                                            <ResourceDictionary.MergedDictionaries>
                                                                                <ResourceDictionary Source="DataTemplates\RowProcessorActionParameterResourceDictionary.xaml"/>
                                                                            </ResourceDictionary.MergedDictionaries>
                                                                        </ResourceDictionary>
                                                                    </ContentPresenter.Resources>
                                                                </ContentPresenter>
                                                            </DockPanel>
                                                        </DockPanel>
                                                    </DockPanel>
                                                </DockPanel>
                                            </DataTemplate>
                                        </TabControl.ContentTemplate>
                                    </TabControl>
                                </Grid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <!--Programmer Tab-->
                <TabItem Header="Programmer" Visibility="{Binding ApplicationData.Programs, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <TabControl DockPanel.Dock="Top" ItemsSource="{Binding ApplicationData.Programs}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True">
                                    <DockPanel DockPanel.Dock="Top">
                                        <Label DockPanel.Dock="Left" Content="Description"/>
                                        <ComboBox DockPanel.Dock="Right" Width="80" SelectedValue="{Binding IOMode}" ItemsSource="{Binding Source={StaticResource ScriptIOModes}}">
                                            <ComboBox.Resources>
                                                <!--Deals with binding of non-string type-->
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </ComboBox.Resources>
                                        </ComboBox>
                                        <Label DockPanel.Dock="Right" Content="IO Mode"/>
                                        <TextBox DockPanel.Dock="Left" Text="{Binding Description}"/>
                                    </DockPanel>
                                    <avalonEdit:TextEditor
                                        DockPanel.Dock="Bottom" Margin="5"
                                        BorderThickness="2" BorderBrush="Beige"
                                        ShowLineNumbers="True"
                                        SyntaxHighlighting="Python" 
                                        FontSize="10pt" FontFamily="Consolas" 
                                        DataContextChanged="ProgramScriptAvalonTextEditor_DataContextChanged"
                                        Initialized="ProgramScriptAvalonTextEditor_Initialized"
                                        TextChanged="ProgramScriptAvalonTextEditor_OnTextChanged"/>
                                </DockPanel>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <!--Workflow Tab-->
                <TabItem Header="Workflow" Visibility="{Binding ApplicationData.Workflows, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <TabControl ItemsSource="{Binding ApplicationData.Workflows}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--Workflow Steps Tree View-->
                                    <DockPanel Grid.Column="0" LastChildFill="True">
                                        <StackPanel DockPanel.Dock="Bottom"
                                                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                    Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="Button">
                                                    <Setter Property="MinWidth" Value="60"/>
                                                    <Setter Property="MinHeight" Value="22"/>
                                                    <Setter Property="Margin" Value="4"/>
                                                    <Setter Property="Padding" Value="4"/>
                                                </Style>
                                            </StackPanel.Resources>
                                            <Button Content="Add New Step" Click="AddWorkflowStepButton_Click"/>
                                            <Button Content="Add Subsequent Step" Click="AddWorkflowStepSubstepButton_Click" />
                                            <Button Content="Remove Step" Click="RemoveWorkflowStepButton_Click" />
                                            <Button Content="Delete Workflow" Click="DeleteWorkflowButton_Click"/>
                                            <Button Content="Execute" Click="ExecuteWorkflowButton_Click" 
                                                    Background="SteelBlue" Foreground="White" BorderBrush="DarkBlue" BorderThickness="2" />
                                        </StackPanel>
                                        <Label DockPanel.Dock="Top" Content="Workflow Steps"/>
                                        <TreeView SelectedItemChanged="WorkflowTreeView_SelectedItemChanged" ItemsSource="{Binding StartingSteps}">
                                            <TreeView.Resources>
                                                <HierarchicalDataTemplate DataType="{x:Type core:ApplicationWorkflowStep}" ItemsSource="{Binding NextSteps}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label Content="[" Margin="0" Padding="0"/>
                                                            <Label Content="{Binding ActionType}" VerticalAlignment="Center" Margin="0" Padding="0">
                                                                <Label.Resources>
                                                                    <!--Deals with binding of non-string type-->
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="FontSize" Value="12"/>
                                                                    </Style>
                                                                </Label.Resources>
                                                            </Label>
                                                            <Label Content="] " Margin="0" Padding="0"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                        <StackPanel Orientation="Horizontal" Visibility="{Binding ActionItem, Converter={StaticResource StringToVisibilityConverter}}">
                                                            <Label Content=" (" Margin="0" Padding="0"/>
                                                            <Label Content="{Binding ActionItem}" Margin="0" Padding="0"/>
                                                            <Label Content=")" Margin="0" Padding="0"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>
                                            </TreeView.Resources>
                                        </TreeView>
                                    </DockPanel>
                                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <!--Workflow Properties Panel-->
                                        <DockPanel Grid.Row="0">
                                            <Label DockPanel.Dock="Top" Content="Workflow Properties"/>
                                            <DockPanel DockPanel.Dock="Top"  LastChildFill="True" Margin="2">
                                                <Label Content="Name"/>
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DockPanel>
                                            <DockPanel DockPanel.Dock="Top" LastChildFill="True" Margin="2">
                                                <Label DockPanel.Dock="Top" Content="Description"/>
                                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                         TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                                                         SpellCheck.IsEnabled="True"/>
                                            </DockPanel>
                                        </DockPanel>
                                        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                                        <!--Workflow Step Properties Panel-->
                                        <StackPanel Grid.Row="2" DataContext="{Binding CurrentSelectedWorkflowStep, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Visibility="{Binding Path=., Converter={StaticResource ObjectToVisibilityConverter}}" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}">
                                            <Label Content="Step Properties" />
                                            <DockPanel>
                                                <Label Content="Name" Width="45"/>
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DockPanel>
                                            <DockPanel>
                                                <Label Content="Type" Width="45"/>
                                                <ComboBox ItemsSource="{Binding Source={StaticResource WorkflowActionTypes}}" SelectedItem="{Binding ActionType}">
                                                    <ComboBox.Resources>
                                                        <!--Deals with binding of non-string type-->
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontSize" Value="12"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Style>
                                                    </ComboBox.Resources>
                                                </ComboBox>
                                            </DockPanel>
                                            <DockPanel>
                                                <DockPanel.Style>
                                                    <Style TargetType="DockPanel">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ActionType}" Value="SequenceGroup">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DockPanel.Style>
                                                <Label Content="Action" Width="45"/>
                                                <Button DockPanel.Dock="Right" Content="Pick" Click="WorkflowStepPickActionItemButton_Click" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}}"/>
                                                <Button DockPanel.Dock="Right" Content="Create" Click="WorkflowStepCreateProgrammerButton_Click" Tag="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ActionType}" Value="Programmer">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                                <TextBox Text="{Binding ActionItem, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                                            </DockPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <!--Engine Tab-->
                <TabItem Header="Engine" Visibility="{Binding ApplicationData.Workflows, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--Variables Configuration Panel-->
                            <DockPanel Grid.Row="0" LastChildFill="True">
                                <Label Content="Configure Variables"/>
                                <DockPanel>
                                    <ListView ItemsSource="{Binding ApplicationData.Variables}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Name}"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </DockPanel>
                            </DockPanel>
