<Window x:Class="Expresso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expresso"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:conv="clr-namespace:Expresso.Converters"
        xmlns:core="clr-namespace:Expresso.Core"
        xmlns:main="clr-namespace:Expresso"
        xmlns:comp="clr-namespace:Expresso.Components"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Width="1024" Height="768"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        AllowDrop="True" Drop="Window_Drop" Closing="Window_Closing">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></conv:BooleanToVisibilityConverter>
        <conv:BooleanToVisibilityConverterInverted x:Key="BooleanToVisibilityConverterInverted"></conv:BooleanToVisibilityConverterInverted>
        <conv:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter"></conv:ObjectToBooleanConverter>
        <conv:ObjectToBooleanConverterInverted x:Key="ObjectToBooleanConverterInverted"></conv:ObjectToBooleanConverterInverted>
        <conv:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"></conv:ObjectToVisibilityConverter>
        <conv:ObjectToVisibilityConverterInverted x:Key="ObjectToVisibilityConverterInverted"></conv:ObjectToVisibilityConverterInverted>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"></conv:StringToVisibilityConverter>
        <conv:StringToVisibilityConverterInverted x:Key="StringToVisibilityConverterInverted"></conv:StringToVisibilityConverterInverted>

        <ObjectDataProvider x:Key="ApplicationConditionTypes" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ConditionType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="VariableValueTypes" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:VariableValueType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="VariableSourceTypes" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:VariableSourceType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="WorkflowActionTypes" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:WorkflowActionType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="ScriptIOModes" ObjectType="{x:Type sys:Enum}" MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="core:ScriptIOMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style TargetType="Control">
            <Setter Property="ToolTipService.ShowDuration" Value="6000"/>
        </Style>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2" />
                </Style>
            </Style.Resources>

            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="Padding" Value="2 0"/>
            <Setter Property="MinHeight" Value="20"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="LightBlue" />
        </Style>

        <Style TargetType="Label" x:Key="ContextKey">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="Button" x:Key="WelcomeButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
            
            <Setter Property="Width" Value="240"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Background" Value="LightCyan"/>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="New" Key="N" Modifiers="Ctrl"/>
        <KeyBinding Command="Open" Key="O" Modifiers="Ctrl"/>
        <KeyBinding Command="Save" Key="S" Modifiers="Ctrl"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="FileNewCommand_CanExecute" Executed="FileNewCommand_Executed" />
        <CommandBinding Command="Open" CanExecute="FileOpenCommand_CanExecute" Executed="FileOpenCommand_Executed" />
        <CommandBinding Command="Save" CanExecute="FileSaveCommand_CanExecute" Executed="FileSaveCommand_Executed" />

        <CommandBinding Command="comp:ExpressoCommands.CreateVariableCommand" CanExecute="CreateVariableCommand_CanExecute" Executed="CreateVariableCommand_Executed"/>
        <CommandBinding Command="comp:ExpressoCommands.CreateConditionCommand" CanExecute="CreateConditionCommand_CanExecute" Executed="CreateConditionCommand_Executed"/>
        <CommandBinding Command="comp:ExpressoCommands.CreateReaderCommand" CanExecute="CreateReaderCommand_CanExecute" Executed="CreateReaderCommand_Executed"/>
        <CommandBinding Command="comp:ExpressoCommands.CreateWriterCommand" CanExecute="CreateWriterCommand_CanExecute" Executed="CreateWriterCommand_Executed"/>
        <CommandBinding Command="comp:ExpressoCommands.CreateRowProcessorCommand" CanExecute="CreateRowProcessorCommand_CanExecute" Executed="CreateRowProcessorCommand_Executed"/>
        <CommandBinding Command="comp:ExpressoCommands.CreateWorkflowCommand" CanExecute="CreateWorkflowCommand_CanExecute" Executed="CreateWorkflowCommand_Executed"/>
        
        <CommandBinding Command="comp:ExpressoCommands.RunEngineCommand" CanExecute="RunEngineCommand_CanExecute" Executed="RunEngineCommand_Executed"/>
    </Window.CommandBindings>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New..." Command="New"/>
                <MenuItem Header="_Open..." Command="Open"/>
                <MenuItem Header="Save" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}" Command="Save"/>
                <MenuItem Header="Save As..." IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}" Click="MenuItemFileSaveAs_Click"/>
                <Separator/>
                <MenuItem Header="Export CSV..." IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <MenuItem Header="Export as SQLite..." Click="MenuItemExportSQLite_Click" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <MenuItem Header="Export Scripts..." Click="MenuItemExportScripts_Click" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}"/>
                <Separator/>
                <MenuItem Header="Close"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="_Create" IsEnabled="{Binding CurrentFilePath,Converter={StaticResource ObjectToBooleanConverter}}">
                <MenuItem Header="_Variable..." Command="comp:ExpressoCommands.CreateVariableCommand"/>
                <MenuItem Header="_Condition..." Command="comp:ExpressoCommands.CreateConditionCommand"/>
                <MenuItem Header="_Reader..." Command="comp:ExpressoCommands.CreateReaderCommand"/>
                <MenuItem Header="_Writer..." Command="comp:ExpressoCommands.CreateWriterCommand"/>
                <MenuItem Header="_Row Processor..." Command="comp:ExpressoCommands.CreateRowProcessorCommand"/>
                <MenuItem Header="Work_flow..." Command="comp:ExpressoCommands.CreateWorkflowCommand"/>
            </MenuItem>
            <MenuItem Header="_Engine">
                <MenuItem Header="Run..." Command="comp:ExpressoCommands.RunEngineCommand"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="_About" Click="MenuItemHelpAbout_Click"/>
            </MenuItem>
            <MenuItem Header="|" IsEnabled="False" Visibility="{Binding CurrentFilePath,Converter={StaticResource ObjectToVisibilityConverter}}"/>
            <MenuItem Header="Save" Visibility="{Binding CurrentFilePath,Converter={StaticResource ObjectToVisibilityConverter}}" Click="MenuItemFileSave_Click"/>
        </Menu>
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Open or Create A File to Get Started." FontSize="32" Foreground="LightGray" 
                       Background="Transparent" MouseDoubleClick="BackgroundLabel_MouseDoubleClick"       
                       ToolTip="Double click to open file"
                       Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverterInverted}}"/>
                <TextBlock TextAlignment="Center" FontSize="22" Foreground="LightGray" HorizontalAlignment="Center" Margin="6">
                    <Run>Open Ctrl+O</Run>
                    <LineBreak/>
                    <Run>Create Ctrl+N</Run>
                </TextBlock>
            </StackPanel>
            <TabControl TabStripPlacement="Left" Margin="0, 0, 0, 10" SelectedIndex="{Binding MainTabControlTabIndex}"
                        Visibility="{Binding CurrentFilePath, Converter={StaticResource ObjectToVisibilityConverter}}"
                        SelectionChanged="MainGUITabControl_SelectionChanged">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <RotateTransform Angle="270" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </TabControl.ItemContainerStyle>
                <!--Welcome Tab-->
                <TabItem Header="Welcome">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="7" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Orientation="Vertical">
                                <TextBlock TextAlignment="Center" Foreground="Red">
                                <Run>This software is still in development; Backup/Export often in case of crash.</Run>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Create Variable" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateVariable_Click"/>
                                    <Button Content="Create Condition" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateCondition_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Create Reader" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateReader_Click"/>
                                    <Button Content="Create Writer" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateWriter_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Create Row Processor" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateProcessor_Click"/>
                                    <Button Content="Create Workflow" Style="{StaticResource WelcomeButton}" Click="MenuItemCreateWorkflow_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                        <Border x:Name="DocumentPropertiesPanel" 
                                Grid.Column="2"
                                BorderThickness="1" BorderBrush="LightGray" 
                                Padding="5"
                                CornerRadius="2" Background="LightBlue">
                            <DockPanel LastChildFill="True">
                                <StackPanel DockPanel.Dock="Top">
                                    <Label Content="Document Properties"/>
                                    <DockPanel>
                                        <Label Content="Name" Width="70"/>
                                        <TextBox Text="{Binding ApplicationData.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                </StackPanel>
                                <StackPanel DockPanel.Dock="Bottom">
                                    <DockPanel>
                                        <Label Content="Iteration" Width="100"/>
                                        <Label Content="{Binding ApplicationData.Iteration}">
                                            <Label.Resources>
                                                <!--Deals with binding of non-string type-->
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                </Style>
                                            </Label.Resources>
                                        </Label>
                                    </DockPanel>
                                    <DockPanel>
                                        <Label Content="Creation Time" Width="100"/>
                                        <Label Content="{Binding ApplicationData.CreationTime}">
                                            <Label.Resources>
                                                <!--Deals with binding of non-string type-->
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                </Style>
                                            </Label.Resources>
                                        </Label>
                                    </DockPanel>
                                </StackPanel>
                                <DockPanel DockPanel.Dock="Top">
                                    <Label Content="Description" Width="70"/>
                                    <TextBox Text="{Binding ApplicationData.Description, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalScrollBarVisibility="Auto"
                                             TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                                             SpellCheck.IsEnabled="True"/>
                                </DockPanel>
                            </DockPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <!--Variable Tab-->
                <TabItem Header="Variable" Visibility="{Binding ApplicationData.Variables, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <DockPanel LastChildFill="True">
                        <StackPanel DockPanel.Dock="Bottom">
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                                <Button Content="Add" Click="VariablesAddVariableButton_Click"/>
                                <Button Content="Remove" Click="VariablesRemoveVariableButton_Click"/>
                            </StackPanel>
                            <TextBlock >
                                <Span FontSize="32" FontWeight="Bold">Variables</Span>
                                <LineBreak/>
                                <Span>Use variables at anywhere strings are evaluated, e.g. queries.</Span>
                            </TextBlock>
                        </StackPanel>
                        <Grid DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <DockPanel Grid.Column="0">
                                <Label DockPanel.Dock="Top" Content="Current Variables"/>
                                <ListView DockPanel.Dock="Bottom" ItemsSource="{Binding ApplicationData.Variables}" SelectedItem="{Binding CurrentSelectedVariable}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Name}"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </DockPanel>
                            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                            <Grid Grid.Column="2" IsEnabled="{Binding CurrentSelectedVariable, Converter={StaticResource ObjectToBooleanConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6*" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="5*" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <DockPanel DockPanel.Dock="Top">
                                        <Label Content="Name" Width="100"/>
                                        <TextBox Text="{Binding CurrentSelectedVariable.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <Label Content="Value Type" Width="100"/>
                                        <ComboBox ItemsSource="{Binding Source={StaticResource VariableValueTypes}}" SelectedItem="{Binding CurrentSelectedVariable.ValueType}">
                                            <ComboBox.Resources>
                                                <!--Deals with binding of non-string type-->
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </ComboBox.Resources>
                                        </ComboBox>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <Label Content="Source Type" Width="100"/>
                                        <ComboBox ItemsSource="{Binding Source={StaticResource VariableSourceTypes}}" SelectedItem="{Binding CurrentSelectedVariable.SourceType}">
                                            <ComboBox.Resources>
                                                <!--Deals with binding of non-string type-->
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </ComboBox.Resources>
                                        </ComboBox>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <DockPanel.Style>
                                            <Style TargetType="DockPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.SourceType}" Value="Fixed">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.ValueType}" Value="SingleValue">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.SourceType}" Value="CustomList">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>
                                        <Label Content="Source" Width="100"/>
                                        <TextBox 
                                            Text="{Binding CurrentSelectedVariable.Source, UpdateSourceTrigger=PropertyChanged}"
                                            AcceptsReturn="True" AcceptsTab="True" Height="200" VerticalScrollBarVisibility="Auto"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <DockPanel.Style>
                                            <Style TargetType="DockPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.SourceType}" Value="Reader">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>
                                        <Label Content="Source" Width="100"/>
                                        <Button DockPanel.Dock="Right" Content="Pick" Click="VariablePickSourceReaderButton_Click"/>
                                        <TextBox Text="{Binding CurrentSelectedVariable.Source, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <DockPanel.Style>
                                            <Style TargetType="DockPanel">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.ValueType}" Value="SingleValue">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.ValueType}" Value="Iterator">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>
                                        <Label Content="Array Join Seperator" Width="120"/>
                                        <TextBox Text="{Binding CurrentSelectedVariable.ArrayJoinSeparator, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <DockPanel DockPanel.Dock="Top">
                                        <DockPanel.Style>
                                            <Style TargetType="DockPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentSelectedVariable.ValueType}" Value="SingleValue">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>
                                        <Label Content="Default Value" Width="100"/>
                                        <TextBox Text="{Binding CurrentSelectedVariable.DefaultValue, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <StackPanel>
                                        <Button Content="Generate Preview" Click="VariableGeneratePreviewButton_Click" DataContext="{Binding CurrentSelectedVariable}"/>
                                    </StackPanel>
                                </StackPanel>
                                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                                <StackPanel Grid.Row="2">
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </TabItem>
                <!--Conditions Tab-->
                <TabItem Header="Condition" Visibility="{Binding ApplicationData.Conditionals, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <DockPanel Grid.Column="0" LastChildFill="True">
                            <Label DockPanel.Dock="Top" Content="Conditions"/>
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                                <Button Content="Add"/>
                                <Button Content="Remove"/>
                            </StackPanel>
                            <ListView DockPanel.Dock="Top" ItemsSource="{Binding ApplicationData.Conditionals}" SelectedItem="{Binding CurrentSelectedCondition}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <Label Content="{Binding Type}">
                                                <Label.Resources>
                                                    <!--Deals with binding of non-string type-->
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="Foreground" Value="DarkBlue"/>
                                                    </Style>
                                                </Label.Resources>
                                            </Label>
                                            <Label Content="{Binding Name}" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DockPanel>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Margin="1 0"/>
                        <StackPanel Grid.Column="2" DataContext="{Binding CurrentSelectedCondition}" Visibility="{Binding Path=., Converter={StaticResource ObjectToVisibilityConverter}}">
                            <Label Content="Condition Settings"/>
                            <DockPanel>
                                <Label Content="Name"/>
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content="Type"/>
                                <ComboBox ItemsSource="{Binding Source={StaticResource ApplicationConditionTypes}}" SelectedItem="{Binding Type}">
                                    <ComboBox.Resources>
                                        <!--Deals with binding of non-string type-->
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Foreground" Value="DarkBlue"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </DockPanel>
                            <DockPanel>
                                <Label DockPanel.Dock="Left" Content="Reader Name"/>
                                <Button DockPanel.Dock="Right" Content="Pick" Click="PickConditionSourceReaderButton_Click"/>
                                <TextBox DockPanel.Dock="Left" Text="{Binding ReaderName, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                            </DockPanel>
                            <StackPanel>
                                <Label DockPanel.Dock="Top" Content="Description"/>
                                <TextBox DockPanel.Dock="Bottom" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" MinHeight="250"
                                         TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                                         SpellCheck.IsEnabled="True"/>
                            </StackPanel>
                            <StackPanel>
                                <Button Content="Evaluate" Click="EvaluateCurrentConditionResultButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <!--Reader Tab-->
                <TabItem Header="Reader" Visibility="{Binding ApplicationData.DataReaders, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <TabControl ItemsSource="{Binding ApplicationData.DataReaders}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0" >
                                            <DataGrid 
                                                AutoGenerateColumns="True" ItemsSource="{Binding ReaderResultsView, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                                Visibility="{Binding ShowResultAsDataGrid, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            <TextBox 
                                                Text="{Binding ResultPreview, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                                FontFamily="Consolas"
                                                IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                                Visibility="{Binding ShowResultAsDataGrid, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource BooleanToVisibilityConverterInverted}}"/>
                                            <ToggleButton 
                                                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="22 6"
                                                Visibility="{Binding ResultPreview, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource ObjectToVisibilityConverter}}"
                                                Content="Show Data Grid" IsChecked="{Binding ShowResultAsDataGrid, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                        </Grid>
                                        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 1"/>
                                        <TabControl Grid.Row="2">
                                            <TabItem Header="Data Source">
                                                <DockPanel LastChildFill="True">
                                                    <TabControl DockPanel.Dock="Top" 
                                                    Visibility="{Binding DataQueries, Converter={StaticResource ObjectToVisibilityConverter}}"
                                                    ItemsSource="{Binding DataQueries}">
                                                        <TabControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Label Content="{Binding ServiceProvider}"/>
                                                            </DataTemplate>
                                                        </TabControl.ItemTemplate>
                                                        <TabControl.ContentTemplate>
                                                            <DataTemplate>
                                                                <DockPanel LastChildFill="True">
                                                                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="2">
                                                                        <Button Content="Submit" Click="ReaderQuerySubmitButton_Click"/>
                                                                        <Button Content="Delete Query" Click="DeleteDataQueryButton_Click" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                                        <Button Content="Add Query" Click="AddDataQueryButton_Click" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}"/>
                                                                    </StackPanel>
                                                                    <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                                                                        <DockPanel LastChildFill="True">
                                                                            <Label DockPanel.Dock="Left" Content="Name"/>
                                                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                                        </DockPanel>
                                                                        <DockPanel LastChildFill="False">
                                                                            <Label Content="Data Service Provider"/>
                                                                            <ComboBox DockPanel.Dock="Top" MinWidth="120" 
                                                                                      SelectedValue="{Binding ServiceProvider}" 
                                                                                      ItemsSource="{Binding ReaderDataServiceProviderNames, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                                                        </DockPanel>
                                                                    </StackPanel>
                                                                    <ContentPresenter DockPanel.Dock="Bottom" Content="{Binding Parameters}">
                                                                        <ContentPresenter.Resources>
                                                                            <ResourceDictionary>
                                                                                <ResourceDictionary.MergedDictionaries>
                                                                                    <ResourceDictionary Source="DataTemplates\ReaderDataSourceQueryParameterResourceDictionary.xaml"/>
                                                                                </ResourceDictionary.MergedDictionaries>
                                                                            </ResourceDictionary>
                                                                        </ContentPresenter.Resources>
                                                                    </ContentPresenter>
                                                                </DockPanel>
                                                            </DataTemplate>
                                                        </TabControl.ContentTemplate>
                                                    </TabControl>
                                                    <Grid DockPanel.Dock="Top" Visibility="{Binding DataQueries, Converter={StaticResource ObjectToVisibilityConverterInverted}}">
                                                        <Label 
                                                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                            Content="Add A Query to Get Started." 
                                                            FontSize="16" 
                                                            Foreground="LightGray" />
                                                        <Button Content="Add Query" Click="AddDataQueryButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                                                    </Grid>
                                                </DockPanel>
                                            </TabItem>
